			"companion": "thorne",
			"amount": 5
		},
		{
			"id": "loyalty_agree",
			"type": "LoyaltyChange",
			"position_x": 2300,
			"position_y": 200,
			"companion": "lyra",
			"amount": 5
		},
		{
			"id": "loyalty_agree_thorne",
			"type": "LoyaltyChange",
			"position_x": 2450,
			"position_y": 200,
			"companion": "thorne",
			"amount": -5
		},
		{
